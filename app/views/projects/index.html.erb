<div class="py-4">
  <h1 class="text-center mb-4 display-4">Proyectos</h1>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm rounded-lg">
        <div class="card-header bg-light">
          <%= link_to "Nuevo Proyecto", new_project_path, class: "btn btn-primary float-end" %>
        </div>
        <div class="card-body">
          <table class="table table-hover table-responsive-md">
            <thead class="table-light">
              <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Fecha de inicio</th>
                <th>Fecha de creacion</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= link_to_project(project, class: "btn btn-link") %></td>
                  <td><%= Project.statuses[project.status] %></td>
                  <td><%= project.start_date || "-" %></td>
                  <td><%= project.created_at.strftime("%d/%m/%Y") %></td>  
                  <td>
                    <%= toggle_project_activation(project) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
