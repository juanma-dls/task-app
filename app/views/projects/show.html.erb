<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="mb-0">Informacion de Proyecto</h2>
      <a href="<%= edit_project_path(@project) %>" class="btn btn-sm btn-primary">Editar Proyecto</a>
    </div>

    <div class="card-body">
      <div class="row">
        <div class="col-md-9">
          <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9"><%= @project.name %></dd>

            <dt class="col-sm-3">Descripci√≥n:</dt>
            <dd class="col-sm-9"><%= @project.description %></dd>

            <dt class="col-sm-3">Creador:</dt>
            <dd class="col-sm-9"><%= @project.creator_user.nombre %></dd>

            <dt class="col-sm-3">Estado:</dt>
            <dd class="col-sm-9"><%= @project.status.humanize %></dd>

            <dt class="col-sm-3">Fecha de inicio:</dt>
            <dd class="col-sm-9"><%= @project.start_date || "No iniciado" %></dd>

            <dt class="col-sm-3">Creado:</dt>
            <dd class="col-sm-9"><%= @project.created_at.strftime("%d/%m/%Y %H:%M") %></dd>

            <dt class="col-sm-3">Actualizado:</dt>
            <dd class="col-sm-9"><%= @project.updated_at.strftime("%d/%m/%Y %H:%M") %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-3 d-flex">
    <%= link_to new_task_path, class: "btn btn-secondary d-flex align-items-center" do %>
      <span class="material-symbols-outlined">
        task
      </span>
      <span class="align-self-center">Agregar tarea</span>
    <% end %>
  </div>
</div>
