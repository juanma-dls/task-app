<div class="container-fluid py-4">
  <h1 class="text-center mb-4 display-4">Tareas</h1>

  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm rounded-lg">
        <div class="card-header bg-light">
          <%= link_to "Nueva Tarea", new_task_path, class: "btn btn-primary float-end" %>
        </div>
        <div class="card-body">
          <table class="table table-hover table-responsive-md">
            <thead class="table-light">
              <tr>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Fecha de creacion</th>
                <th ></th>
              </tr>
            </thead>
            <tbody>
              <% @tasks.each do |task| %>
                <tr>
                  <td><%= task.name %></td>
                  <td><%= task.status.humanize %></td>
                  <td><%= task.created_at.strftime("%d/%m/%Y") %></td>  
                  <td>
                    <%= link_to 'Ver', task_path(task), class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to 'Baja', task_path(task), method: :delete, data: { confirm: '¿Estás seguro?' }, class: "btn btn-sm btn-outline-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
