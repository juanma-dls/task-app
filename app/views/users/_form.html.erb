<div class="container">
  <div class="card shadow-sm p-4 mb-4">
    <% if user.present?%>
      <div class="card-header">
        <h2>Editar Usuario</h2>
      </div>
    <% else %>
      <div class="card-header">
        <h2>Crear Usuario</h2>
      </div>
    <% end %>
    <%= form_for(user) do |f| %>
      <div class="card-body">
        <div class="mb-3 row">
          <label for="user_nombre" class="col-sm-3 col-form-label">Nombre</label>
          <div class="col-sm-9">
            <%= f.text_field :nombre, class: "form-control", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="user_email" class="col-sm-3 col-form-label">Email</label>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="user_username" class="col-sm-3 col-form-label">Username</label>
          <div class="col-sm-9">
            <%= f.text_field :username, class: "form-control", required: true %>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="user_password" class="col-sm-3 col-form-label">Password</label>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caracteres m√≠nimo)</em>
            <% end %>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="user_password_confirmation" class="col-sm-3 col-form-label">Confirm Password</label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>

        <div class="mb-3 row">
          <label for="user_roles" class="col-sm-3 col-form-label">Rol de usuario</label>
          <div class="col-sm-9">
            <%= render "roles_checkbox", f: f %>
          </div>
        </div>
      </div>
      <% if user.present?%>
        <div class="card-footer text-center">
          <%= f.submit "Editar Usuario", class: "btn btn-primary" %>
        </div>
      <% else %>
        <div class="card-footer text-center">
          <%= f.submit "Crear Usuario", class: "btn btn-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
